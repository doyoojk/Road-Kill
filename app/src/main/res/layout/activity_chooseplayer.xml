<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewChoosePlayer"
        android:layout_width="525dp"
        android:layout_height="1021dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-59dp"
        android:layout_marginTop="-65dp"
        android:layout_marginEnd="-55dp"
        android:layout_marginBottom="-88dp"
        android:src="@drawable/chooseplayer" />

    <RadioGroup
        android:id="@+id/car_selection_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="552dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/car_1"
            android:layout_width="108dp"
            android:layout_height="96dp"
            android:drawableTop="@drawable/bmw" />

        <RadioButton
            android:id="@+id/car_2"
            android:layout_width="108dp"
            android:layout_height="96dp"
            android:drawableTop="@drawable/tesla" />

        <RadioButton
            android:id="@+id/car_3"
            android:layout_width="108dp"
            android:layout_height="96dp"
            android:drawableTop="@drawable/gwagon" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="248dp"
        android:fontFamily="@font/alata"
        android:text="Select Car:"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="423dp"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/difficulty_selection_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="386dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/difficulty_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Easy"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/difficulty_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Medium"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/difficulty_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Hard"
            android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="@font/alata"
        android:text="Select Difficulty:"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <!--    <Button-->
<!--        android:id="@+id/choose_player_button"-->
<!--        android:layout_width="141dp"-->
<!--        android:layout_height="62dp"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginStart="232dp"-->
<!--        android:layout_marginBottom="45dp"-->
<!--        android:fontFamily="@font/alata"-->
<!--        android:text="Play"-->
<!--        android:textSize="16sp" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="352dp"
        android:text="Enter Player Name:"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="675dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/alata"
        android:text="Play"
        android:textSize="16sp" />

</RelativeLayout>