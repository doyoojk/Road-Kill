<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreen">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="182dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart_icon_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/heart_icon_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/heart_icon_3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/heart_icon_4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/heart_icon_5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/heart" />
    </LinearLayout>


    <ImageView
        android:id="@+id/up_b"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp"
        android:src="@drawable/up_b" />

    <ImageView
        android:id="@+id/down_b"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp"
        android:src="@drawable/down_b" />

    <ImageView
        android:id="@+id/right_b"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/right_b"
        />

    <ImageView
        android:id="@+id/left_b"
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="144dp"

        android:src="@drawable/left_b" />

    <RelativeLayout
        android:id="@+id/cow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/deer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/boat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/log_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/car_icon"
        android:layout_width = "100px"
        android:layout_height = "100px"
        android:layout_marginBottom="324px"
        android:layout_marginLeft="540px"
        />


</RelativeLayout>